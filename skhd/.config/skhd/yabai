##### YABAI #####

# stop/start/restart yabai
shift + alt - q : yabai --stop-service
shift + alt - s : yabai --start-service
shift + alt - r : yabai --restart-service

# Change window focus
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# External display
alt - d : yabai -m display --focus south
alt - u : yabai -m display --focus north

# move window
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - l : yabai -m window --warp east

# move window to space
ctrl + alt - 1 : yabai -m window --space 1
ctrl + alt - 2 : yabai -m window --space 2
ctrl + alt - 3 : yabai -m window --space 3
ctrl + alt - 4 : yabai -m window --space 4
# ctrl + alt - 5 : yabai -m window --space 5
# ctrl + alt - 6 : yabai -m window --space 6

alt - r : yabai -m space --rotate 270
alt - y : yabai -m space --mirror y-axis
alt - x : yabai -m space --mirror x-axis

alt - space : yabai -m window --toggle float --grid 4:4:1:1:2:2

shift + alt - f : yabai -m window --toggle zoom-fullscreen
shift + alt - e : yabai -m space --balance

shift + alt - h : yabai -m window --resize left:-50:0; \
                  yabai -m window --resize right:-50:0
shift + alt - j : yabai -m window --resize bottom:0:50; \
                  yabai -m window --resize top:0:50
shift + alt - k : yabai -m window --resize top:0:-50; \
                  yabai -m window --resize bottom:0:-50
shift + alt - l : yabai -m window --resize right:50:0; \
                  yabai -m window --resize left:50:0
